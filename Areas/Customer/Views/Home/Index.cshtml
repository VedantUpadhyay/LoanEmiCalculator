@model LoanInput

@{
    ViewData["Title"] = "Home Page";
}

<link href="~/css/StyleSheet.css" rel="stylesheet" />

<div style="display:inline-block">
    <div class="form">

        <form id="userInput" method="post">

            <span class="dx-field-label">First Name:</span>
            <div class="dx-field-value" style="width:30%;float:left">
                <div id="FirstName">
                </div>
            </div>

            <br />

            <span class="dx-field-label">Last Name:</span>
            <div class="dx-field-value" style="width:30%;float:left;">
                <div id="LastName">
                </div>
            </div>

            <span class="dx-field-label">Age:</span>
            <div class="dx-field-value" style="width:40%;float:left;margin-bottom:32px">
                <div id="AgeSlider"></div>
            </div>

            <span class="dx-field-label">State:</span>
            <div class="dx-field-value">
                <div id="StateDropDown"></div>
            </div>

            <span class="dx-field-label">City:</span>
            <div class="dx-field-value">
                <div id="CityDropdown"></div>
            </div>

            <span class="dx-field-label">Transaction Date:</span>
            <div class="dx-field-value" style="width:30%;float:left">
                <div id="trDate">
                </div>
            </div>

            <span class="dx-field-label">Loan Amount:</span>
            <div class="dx-field-value" style="width:40%;float:left">
                <div id="LoanAmount">
                </div>
            </div>

            <span class="dx-field-label">Rate Of Interest:</span>
            <div class="dx-field-value" style="width:40%;float:left">
                <div id="RateOfInterest">
                </div>
            </div>

            <span class="dx-field-label">No Of Installments:</span>
            <div class="dx-field-value" style="width:40%;float:left">
                <div id="NoOfInstallments">
                </div>
            </div>

            <span class="dx-field-label">Monthly Rate Of Interest:</span>
            <div class="dx-field-value" style="width:40%;float:left">
                <div id="MonthlyRateOfInterest">
                </div>
            </div>

            <span class="dx-field-label">EMI:</span>
            <div class="dx-field-value" style="width:40%;float:left">
                <div id="emi">
                </div>
            </div>

            <span class="dx-field-label" style="margin-top:25px;">
                <div id="getDetailsBtn"></div>
                <div id="postBackButton"></div>
            </span>


        </form>

    </div>

